package com.app.fruits;

import java.util.Scanner;

public class Client {

	public static void main(String[] args) {
	
	   System.out.println("==========Fruit Basket===========");
	   System.out.println("1.Add Mango");
	   System.out.println("2.Add Apple");
	   System.out.println("3.Add Orange");
	   System.out.println("4.Fruit name");
	   System.out.println("Display name,color,weight,taste of all fresh fruits in the basket.");
	   System.out.println("Exit");
	   int ch=0;
	   int i=0;
	   Scanner sc=new Scanner(System.in);
       Fruit[] f=new Fruit[3];
	   while(ch!=-1)
	   {
		   System.out.println("==================================");
		   System.out.println("Enter your choice");
		   ch=sc.nextInt();
		   
		   switch(ch)
		   {
		   case 1:
			f[i]=new Mango("Mango","Yellow",90,true);   
			i++;
			System.out.println("Mango Added");
			   break;
		   case 2:
			 f[i]=new Apple("Apple","Red",10,true);
			 i++;
			 System.out.println("Apple Added");
			   break;
		   case 3:
			   f[i]=new Orange("Orange","Orange",20,true);
			   System.out.println("Orange Added");
			   break;
		   case 4:
			   System.out.println("===========All Fruit name============");
			   for(int j=0;j<i;j++)
			   {
				   f[j].getName();
			   }
		   case 5:
			   System.out.println("===========All Fruit Information=======");
			   for(int k=0;k<i;k++)
			   {
				   String s=f[k].toString();
				   System.out.println(s);
				   f[k].taste();// up casting we can call generlized method using refernce of super class
			   }
			   
		   default:
			   return;
		   }
	   }
		

	}

}
